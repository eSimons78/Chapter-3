#include <iostream>
#include <cmath> // For pow() function
using namespace std;

int main() {
    // Variables to hold user input
    double principal;
    double rate;
    int timesCompounded;

    // Ask the user for the principal amount
    cout << "Enter the principal amount: $";
    cin >> principal;

    // Ask the user for the interest rate
    cout << "Enter the interest rate (as a percentage, e.g., enter 5 for 5%): ";
    cin >> rate;

    // Ask the user for the number of times the interest is compounded
    cout << "Enter the number of times the interest is compounded per year: ";
    cin >> timesCompounded;

    // Convert the interest rate to a decimal
    rate = rate / 100;

    // Calculate the amount in savings after one year
    double amount = principal * pow(1 + (rate / timesCompounded), timesCompounded);

    // Display the results in a report format
    cout << "\nInterest Rate: " << (rate * 100) << "%" << endl;
    cout << "Times Compounded: " << timesCompounded << endl;
    cout << "Principal: $" << principal << endl;
    cout << "Amount in Savings: $" << amount << endl;

    return 0;
}
