#include <iostream>
using namespace std;

int main() {
    // Define the constants for the recipe
    const double sugarPer48Cookies = 1.5;
    const double butterPer48Cookies = 1.0;
    const double flourPer48Cookies = 2.75;
    const int cookiesPerRecipe = 48;

    // Ask the user how many cookies they want to make
    int desiredCookies;
    cout << "Enter the number of cookies you want to make: ";
    cin >> desiredCookies;

    // Calculate the amount of each ingredient needed
    double sugarNeeded = (desiredCookies * sugarPer48Cookies) / cookiesPerRecipe;
    double butterNeeded = (desiredCookies * butterPer48Cookies) / cookiesPerRecipe;
    double flourNeeded = (desiredCookies * flourPer48Cookies) / cookiesPerRecipe;

    // Display the results
    cout << "To make " << desiredCookies << " cookies, you will need:" << endl;
    cout << sugarNeeded << " cups of sugar" << endl;
    cout << butterNeeded << " cups of butter" << endl;
    cout << flourNeeded << " cups of flour" << endl;

    return 0;
}
